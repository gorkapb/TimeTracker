<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>
            %d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
        </pattern></encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.html.HTMLLayout">
                <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </layout>
        </encoder>
        <file>logs.html</file>
    </appender>
    <root level="fatal">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- all > trace > debug > info > warn > error > fatal -->

    <!-- Comentando y descomentando los conjuntos milestone 1 y milestone 2,
     activamos o desactivamos los logs de cada milestone.
     Dejar ambos comentados harÃ¡ que se ejecuten los logs de ambos milestones. -->

    <!-- Milestone 2: -->
    <logger name="DSTimeTracker.JsonVisitor" level="OFF"/>
    <logger name="DSTimeTracker.SearchByTagVisitor" level="OFF"/>

    <!-- Milestone 1: -->
    <logger name="DSTimeTracker.Task" level="OFF"/>
    <logger name="DSTimeTracker.Interval" level="OFF"/>
    <logger name="DSTimeTracker.Main" level="OFF"/>
    <logger name="DSTimeTracker.Assignment" level="OFF"/>
    <logger name="DSTimeTracker.Project" level="OFF"/>
    <logger name="DSTimeTracker.Clock" level="OFF"/>
</configuration>
